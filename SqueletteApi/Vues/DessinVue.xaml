<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SqueletteApi.Vues.DessinVue"
             Title="DessinVue">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontFamily" Value="Fallingsky" />
                <Setter Property="CharacterSpacing" Value="1.5" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
    <StackLayout>
        <StackLayout.Background>
            <LinearGradientBrush>
                <GradientStop Color="Red" Offset="0.1"/>
                <GradientStop Color="Blue" Offset="1.0"/>
            </LinearGradientBrush>
        </StackLayout.Background>
        <Image
            x:Name="TOTO"
       HorizontalOptions="Center"  Source="ima" IsAnimationPlaying="False"></Image>
        <StackLayout>
            <Button Clicked="Button_Clicked" Text="" />
        </StackLayout>  
    </StackLayout>
        
    </ContentPage.Content>
</ContentPage>